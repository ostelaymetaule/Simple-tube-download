<Window x:Name="My_Youtube_Downloader" x:Class="MyYoutubeDL.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyYoutubeDL.Wpf"
        mc:Ignorable="d"
        Title="My_Youtube_Downloader" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="682*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="tbUrl" Margin="8,61,42,0" Text="Youtube video url" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2" />
        <Button Content="Download Video" HorizontalAlignment="Left" Margin="8,84,0,0" VerticalAlignment="Top" Grid.Column="2" Grid.ColumnSpan="2" Click="Button_Click"/>
        <StatusBar Name="stBar" Grid.ColumnSpan="4" VerticalAlignment="Bottom" Height="53">
            <Label Name="lblStatus" Content="press download "/>
        </StatusBar>

    </Grid>

</Window>
